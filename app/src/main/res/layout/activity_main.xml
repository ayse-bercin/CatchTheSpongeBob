<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/score_0"
            android:layout_width="182dp"
            android:layout_height="46dp"
            android:id="@+id/scoreText" android:textSize="30sp"
            android:textAlignment="center" android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:layout_marginBottom="63dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.gridlayout.widget.GridLayout
            android:layout_width="350dp"
            android:layout_height="360dp"
            android:id="@+id/gridLayout"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="55dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/scoreText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginEnd="5dp">

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView3" android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView1"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView2"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView4"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView5"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView6"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView7"
                android:onClick="increaseScore"/>

        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView8"
                android:onClick="increaseScore"/>
        <ImageView
                android:layout_width="115dp"
                android:layout_height="120dp" app:srcCompat="@drawable/spongebob" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView9"
                android:onClick="increaseScore"/>

    </androidx.gridlayout.widget.GridLayout>
    <TextView
            android:text="@string/time_10"
            android:layout_width="258dp"
            android:layout_height="46dp"
            android:id="@+id/textView" android:textSize="30sp"
            android:textAlignment="center" android:gravity="center" android:layout_marginTop="42dp"
            android:layout_marginBottom="37dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/gridLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>